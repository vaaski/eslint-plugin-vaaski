{
  "name": "eslint-plugin-vaaski",
  "type": "module",
  "version": "3.1.1",
  "packageManager": "pnpm@10.6.2",
  "description": "vaaski's customizations of Anthony's opinionated ESLint rules",
  "author": "vaaski <admin@vaa.ski>",
  "contributors": ["Anthony Fu <anthonyfu117@hotmail.com> (https://github.com/antfu/)"],
  "license": "MIT",
  "homepage": "https://github.com/vaaski/eslint-plugin-vaaski#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaaski/eslint-plugin-vaaski.git"
  },
  "bugs": "https://github.com/vaaski/eslint-plugin-vaaski/issues",
  "keywords": [
    "eslint-plugin"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "pnpm run dev && eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.8.1",
    "@antfu/ni": "^24.1.0",
    "@antfu/utils": "^9.1.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.13.10",
    "@typescript-eslint/typescript-estree": "^8.26.1",
    "@typescript-eslint/utils": "^8.26.1",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "eslint-vitest-rule-tester": "^2.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "resolutions": {
    "eslint-plugin-antfu": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
